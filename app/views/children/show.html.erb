<div class="cont2"%>


<div class="content"%>
<h3> <%= @child.name %> </h3>
</div>


<div class="content"%>

<%= form_tag ({controller:'children', action: 'message', method: 'post'}) do %>
  <div class="field">
    <%= hidden_field_tag :child_id, @child.id %>
     <%= hidden_field_tag :user_id, current_user.id %>
    <%= label_tag :message, 'Message:' %></br>
    <%= text_area_tag :message, params[:message] %>
  </div>
  <div class="actions"><%= submit_tag "Send Message"%>
<% end %>
</div>
</div>



<div class="content"%>
<div class="content2"%>

<b> Messages: </b></br>

<% @child.messages.each do |message| %>
  <b><%= message.user.first_name.capitalize %>:</b> <%= message.message %> </br>
<%end%>
</div>
</div>
</div>
 