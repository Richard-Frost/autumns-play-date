<div class="content"</div>

<p>Create a new play date: </p>

<%= form_for(@playdate) do |f| %>
  <%= f.label :name %></br>
  <%= f.text_field :name, class: 'form-control' %></br>
  <%= f.label :location %></br>
  <%= f.text_field :location, class: 'form-control' %></br>
  <%= f.label :description %></br>
  <%= f.text_field :description, class: 'form-control'  %></br>
  <%= f.hidden_field :originator, value: current_user.id %>
  When</br>
  <%= f.text_field :datetime, id: "datetimepicker", class: "form-control" %>
  <%= f.label :participants, "Select a Child:  " %>
  <%= f.collection_check_boxes :participants, @family.children, :id, :name  %></br>
  <%= f.submit %>
  <br>
<%end%>

</div>
