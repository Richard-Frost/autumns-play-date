

<h1> Sign Up </h1>

<%= form_for(@family) do |f| %>

  <%= f.fields_for :users, @user do |user| %>
    <%= user.label :name, "Parent Name:" %></br>
    <%= user.text_field :name, class: 'form-control' %><br>
 
    <%= user.label :email, "Email:" %></br>
    <%= user.text_field :email, class: 'form-control' %><br>
 
    <%= user.label :password, "Password:"  %></br>
    <%= user.password_field :password, class: 'form-control' %><br>
  <% end %>

  <%= f.fields_for :children, @child do |child| %>
    <%= child.label :name, "Child's Name:" %></br>
    <%= child.text_field :name, class: 'form-control' %><br>
    <%= child.label :age, "Age:" %></br>
    <%= child.text_field :age, class: 'form-control' %><br>
  <% end %>

  <%= f.submit %>

<%end%>
